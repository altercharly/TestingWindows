package capanegocio;
import entidades.Persona;
import java.util.ArrayList;

public class Contpersonas {
	ArrayList<Persona> lista = new ArrayList<Persona>();
	
	public void modifyPersona(Persona npers){
		Persona pers;
		int idcomp;
		for (int i = 0; i < lista.size(); i++) {
			pers = lista.get(i);
			idcomp = pers.getid();
			if(npers.id == idcomp){
				lista.set(i, npers);
			}
		}
	}
	public void deletePersona(int id){
		Persona pers;
		int idcomp;
		for (int i = 0; i < lista.size(); i++) {
			pers = lista.get(i);
			idcomp = pers.getid();
			if(npers.id == idcomp){
				lista.remove(i);
			}
		}
	}
	public void addPersona(Persona npers){
		lista.add(npers);
	}
	public Persona getPersona(){
		
	}
	public Persona getByDni(int dni){
		Persona pers;
		int idcomp;
		for (int i = 0; i < lista.size(); i++) {
			pers = lista.get(i);
			idcomp = pers.getid();
			if(id == idcomp){
				return lista.get(i);
			}
		}
	}
}
