package capadata;

import java.util.ArrayList;

import entidades.Persona;

public class Catpersonas {
ArrayList<Persona> lista = new ArrayList<Persona>();
	
	public void modifyPersona(Persona npers){
		Persona pers;
		int idcomp;
		for (int i = 0; i < lista.size(); i++) {
			pers = lista.get(i);
			idcomp = pers.getId();
			if(npers.id == idcomp){
				lista.set(i, npers);
			}
		}
	}
	public void deletePersona(int id){
		Persona pers;
		int idcomp;
		for (int i = 0; i < lista.size(); i++) {
			pers = lista.get(i);
			idcomp = pers.getId();
			if(id == idcomp){
				lista.remove(i);
			}
		}
	}
	public void addPersona(Persona npers){
		lista.add(npers);
	}
	
	public Persona searchPersona(int dni){
		Persona pers = new Persona();
		for(Persona p: lista){
			if (p.getdni() == dni){
				pers= p;
				return pers;
			}
		}
		return null;
	}
	
}
